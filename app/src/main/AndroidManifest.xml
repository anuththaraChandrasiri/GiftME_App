            </intent-filter>
        </activity>
        <activity
            android:name="com.example.madd_Deliverymanagement.OrderTo"
            android:label="@string/title_activity_main2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.madd_Deliverymanagement.DeliverDashboard">
