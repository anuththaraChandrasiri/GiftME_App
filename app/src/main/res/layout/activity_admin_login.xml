<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".AdminLogin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/login_appLogo"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:src="@drawable/logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        />

    <TextView
        android:id="@+id/app_login_text"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="30dp"
        android:text="Tired of typing?  Use remember me!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_below="@+id/login_appLogo"
        />

    <EditText
        android:id="@+id/login_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_login_text"
        android:background="@drawable/input_design_admin"
        android:padding="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:inputType="textEmailAddress"
        android:textColor="#E77111"
        android:textColorHint="#cca300"
        android:hint="Email"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_email_input"
        android:background="@drawable/input_design_admin"
        android:padding="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:textColor="#E77111"
        android:textColorHint="#cca300"
        android:hint="Password"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/login_password_input"
        android:layout_marginTop="5dp"
        >

        <!--><CheckBox
            android:id="@+id/rememberMe_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textColor="#E77111"
            android:cbd_strokeColor="#E77111"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="17dp"
            android:layout_below="@+id/login_password_input"
            android:layout_marginTop="20dp"
            /><!-->

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="#cca300"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="17dp"
            android:layout_below="@+id/rememberMe_checkBox"
            android:layout_marginTop="20dp"
            android:layout_marginStart="135dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout1"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons_admin"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        />

</RelativeLayout>